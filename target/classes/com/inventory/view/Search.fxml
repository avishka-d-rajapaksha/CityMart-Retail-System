<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.SearchController">
   
   <top>
      <VBox spacing="15.0" style="-fx-background-color: #0056b3; -fx-padding: 20;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Global Product Search" textFill="WHITE">
                     <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="CityMart Database" textFill="#aaccff">
                     <font>
                        <Font name="Segoe UI" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" prefHeight="40.0" promptText="Type Product Name, ID, or Category..." style="-fx-background-radius: 4; -fx-font-size: 14px; -fx-padding: 0 15;" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #ff8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 4;" text="SEARCH" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>

   <center>
      <VBox style="-fx-padding: 15;" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="resultsTable" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #eeeeee;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="280.0" text="PRODUCT NAME" />
                <TableColumn fx:id="colCategory" prefWidth="120.0" text="CATEGORY" />
                <TableColumn fx:id="colPrice" prefWidth="100.0" text="PRICE (Rs)" />
                <TableColumn fx:id="colStock" prefWidth="80.0" text="STOCK" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>

   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-border-color: #eeeeee; -fx-border-width: 1px 0 0 0;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="statusLabel" text="Ready to search..." textFill="#666666">
               <font>
                  <Font name="Segoe UI" size="12.0" />
               </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button mnemonicParsing="false" onAction="#handleClose" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-text-fill: #555555; -fx-border-radius: 4; -fx-cursor: hand;" text="Close (ESC)" />
            
            <Button mnemonicParsing="false" onAction="#handleSelect" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #0056b3; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 4;" text="SELECT ITEM" />
         </children>
      </HBox>
   </bottom>
   
</BorderPane>