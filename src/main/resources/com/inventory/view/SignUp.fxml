<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.SignUpController">
   <children>
   
      <!-- ================= LEFT SIDE (Blue Branding) ================= -->
      <Polygon fill="#0056b3" points="0.0, 0.0, 516.0, 3.051757857974735E-6, 418.3999938964844, 600.0, 0.0, 600.0" stroke="TRANSPARENT" strokeType="INSIDE" />
      
      <Pane prefHeight="600.0" prefWidth="480.0">
         <children>
            <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="140.0" layoutY="160.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            
            <Label layoutX="60.0" layoutY="280.0" text="JOIN THE TEAM" textFill="WHITE">
               <font>
                  <Font name="Segoe UI Bold" size="40.0" />
               </font>
            </Label>
            
            <Label layoutX="62.0" layoutY="330.0" prefWidth="350.0" text="Create a new profile to access the City Mart Inventory System." textFill="#aaccff" wrapText="true">
               <font>
                  <Font name="Segoe UI" size="16.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <!-- ================= RIGHT SIDE (Perfectly Aligned Form) ================= -->
      <Pane layoutX="500.0" prefHeight="600.0" prefWidth="380.0">
         <children>
            <Label layoutX="15.0" layoutY="15.0" text="Create Profile" textFill="#333333">
               <font>
                  <Font name="Segoe UI Bold" size="24.0" />
               </font>
            </Label>

            <!-- ROW 1: FULL NAME (Y=60) -->
            <Label layoutX="15.0" layoutY="60.0" text="Full Name" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <TextField fx:id="fullNameField" layoutX="15.0" layoutY="80.0" prefHeight="30.0" prefWidth="350.0" promptText="Enter full name" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- ROW 2: ADDRESS (Y=120) -->
            <Label layoutX="15.0" layoutY="120.0" text="Address" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <TextField fx:id="addressField" layoutX="15.0" layoutY="140.0" prefHeight="30.0" prefWidth="350.0" promptText="Enter address" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- ROW 3: PHONE & USERNAME (Y=180) -->
            <!-- Phone (Left) -->
            <Label layoutX="15.0" layoutY="180.0" text="Phone Number" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <TextField fx:id="phoneField" layoutX="15.0" layoutY="200.0" prefHeight="30.0" prefWidth="165.0" promptText="07X..." style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- Username (Right) -->
            <Label layoutX="200.0" layoutY="180.0" text="Username" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <TextField fx:id="userField" layoutX="200.0" layoutY="200.0" prefHeight="30.0" prefWidth="165.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- ROW 4: ROLE (Y=240) -->
            <Label layoutX="15.0" layoutY="240.0" text="Role" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <ComboBox fx:id="roleCombo" layoutX="15.0" layoutY="260.0" prefHeight="30.0" prefWidth="350.0" promptText="Select Position" style="-fx-background-color: #f8f9fa; -fx-border-color: #cccccc;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Manager" />
                        <String fx:value="Cashier" />
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- ROW 5: PASSWORD (Y=300) -->
            <Label layoutX="15.0" layoutY="300.0" text="Password" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <PasswordField fx:id="passField" layoutX="15.0" layoutY="320.0" prefHeight="30.0" prefWidth="350.0" promptText="Create password" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- ROW 6: CONFIRM PASSWORD (Y=360) -->
            <Label layoutX="15.0" layoutY="360.0" text="Confirm Password" textFill="#555555">
               <font>
                  <Font name="Segoe UI Bold" size="11.0" />
               </font>
            </Label>
            <PasswordField fx:id="confirmPassField" layoutX="15.0" layoutY="380.0" prefHeight="30.0" prefWidth="350.0" promptText="Repeat password" style="-fx-background-color: transparent; -fx-border-color: #cccccc; -fx-border-width: 0px 0px 2px 0px;" />

            <!-- BUTTON (Y=440) -->
            <Button fx:id="signUpBtn" layoutX="15.0" layoutY="440.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: #ff8c00; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 30; -fx-cursor: hand;" text="COMPLETE REGISTRATION" />

            <!-- ERROR LABEL (Y=500) -->
            <Label fx:id="messageLabel" alignment="CENTER" layoutX="15.0" layoutY="500.0" prefWidth="350.0" textFill="#dc3545">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            
            <!-- BACK LINK (Y=530) -->
            <Button layoutX="125.0" layoutY="530.0" mnemonicParsing="false" onAction="#backToLogin" style="-fx-background-color: transparent; -fx-text-fill: #0056b3; -fx-underline: true; -fx-cursor: hand;" text="Back to Login" />
            
         </children>
      </Pane>
   </children>
</AnchorPane>
